<% if flash.notice.present? %>
<p id="notice" class="alert alert-success"><%= flash.notice %></p>
<% end %>

<h1>メモ一覧</h1>

<table class="table-memos">
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        <td><%= memo.created_at %></td>
        <td><%= memo.user_id %></td>
        <td><%= memo.content %></td>
        <td><%= link_to("Show", memo, {class: "btn btn-primary"}) %></td>
        <td><%= link_to("Edit", edit_memo_path(memo), {class: "btn btn-primary"}) %></td>
        <td><%= link_to("Destroy", memo, { method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-secondary"}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to("新規作成", new_memo_path, {class: "btn btn-primary"}) %>
